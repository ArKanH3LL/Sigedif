<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutT">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/sumi"
            android:hint="Introduzca NIS"
            android:layout_gravity="bottom"
            android:layout_weight="5.97"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="14dp"
            android:text="Filtrar Suministro"
            android:layout_weight="1"
            android:id="@+id/buscasum" />

        <Button
            android:text="Limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="14dp"
            android:layout_weight="1"
            android:id="@+id/limpiar" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="5dp">

        <TextView
            android:text="Nro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:id="@+id/textView6"
            android:layout_weight="1" />

        <TextView
            android:text="NIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_weight="1" />

        <TextView
            android:text="Coord X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_weight="1" />

        <TextView
            android:text="Coord Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/textView4"
            android:layout_weight="1" />

        <TextView
            android:text="Entregado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:id="@+id/textView"
            android:layout_weight="1" />
        <TextView
            android:text="Latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/textView8"
            android:layout_weight="1" />
        <TextView
            android:text="Longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#AAAAAA"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
    />

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Itinerario en Mapa"
        android:id="@+id/vermapa"
        android:layout_gravity="center_horizontal" />
</LinearLayout>