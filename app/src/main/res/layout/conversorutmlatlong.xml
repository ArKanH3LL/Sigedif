<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir de UTM a GEO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/TituloConversor"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valorX"
        android:hint="Valor X"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valorY"
        android:hint="Valor Y"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        android:id="@+id/convertidor"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="160dp"
        android:text="Valor LAT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/ValorLAT"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:width="160dp"
        android:text="Valor LONG"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/ValorLONG"
        android:layout_gravity="center_horizontal" /><![CDATA[









    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />






]]>
</LinearLayout>